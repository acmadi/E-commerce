<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                '@FrontendBundle/Resources/public/css/all.css'
            %}
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" type="text/css" rel="stylesheet">
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet">
            {% endstylesheets %}

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body style="background-color: #e7e7e7;">
        {% include "FrontendBundle::navigation.html.twig" %}

        <div class="container top60 bottom60">
            <div class="row row-centered">
                <div class="col-lg-12 col-md-12 col-centered" >
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <footer>
        {% include "FrontendBundle::footer.html.twig" %}
        </footer>
        {% block javascripts %}
            {#jquery have to be bfore bootstrap#}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.5.0/less.min.js"></script>

        {% endblock %}
        <script type="text/javascript" src="FrontendBundle/Resources/public/js/carouselAdditionalFunctions.js"></script>
    </body>
</html>
